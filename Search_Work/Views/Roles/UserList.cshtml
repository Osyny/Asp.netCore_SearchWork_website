<hr />
<div id="container">
    <a class="btn btn-sm btn-primary" asp-action="Index" asp-controller="Roles" asp-route-userid="">Список ролей</a>
    <hr />
    <a asp-action="Create" asp-controller="Roles">Добавити роль</a>

    </div>


    @{
      string userRole = "";
      if (User.Identity.IsAuthenticated)
      {


          if (User.IsInRole("Admin"))
          {
              userRole = "Admin";
          }
          else if (User.IsInRole("Employer"))
          {
              userRole = "Employer";
          }
          else if (User.IsInRole("Candidate"))
          {
              userRole = "Candidate";
          }

          var r = userRole;
      }
    }
<hr />
<div >
    <h4>Список користувачів</h4>
</div>
<hr />
<div id="container">
    <table class="table">
        @foreach (var user in Model)
        {
        <tr>
            <td>@user.UserName</td>
           


            <td>
                <form asp-action="DeleteUser" asp-route-userId="@user.Id" method="post">
                    <button type="submit" class="btn btn-sm btn-danger">
                        Удалить
                    </button>
                </form>
            </td>
            <td>
                <a class="btn btn-sm btn-primary" asp-action="Edit" asp-controller="Roles" asp-route-userid="@user.Id">Edit User</a>
            </td>
        </tr>
        }
    </table>
    </div>

