@model Search_Work.Arrea.Candidate.Models.Resume.AddResumeExpiriensViewModel

@{

  Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row" id="container">

    <div style="float: left; width: 49%">
        <h3><b>Pезюме - @Model.Resume.Name</b></h3>

    </div>
    <div style="float: left; width: 49%">
        <h3><b>Додати досвід роботи</b></h3>

    </div>

</div>

<hr />
<div id="container">
    <form method="post" asp-action="AddExperiences" asp-controller="EditResume" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" name="ResumeId" value="@Model.Resume.Id" />
        <hr />

        <h4>Организація </h4>
        <input type="text" name="NameOrganization" value="" />
        @*<input type="hidden" name="Experiences[0].Id" value="" />*@
        <hr />
        <h4>Період з </h4>

        <p>
            <input type="date" name="DateWorkFrom" value="" />
        <p>
            <h4>по : </h4>
        <p>
            <input type="date" name="DateWorkTo" value="" />
        </p>
        <p>
            <input type="checkbox" name="checkbox" id="checkbox_id" value="">
            <label for="checkbox_id"> Працюю зараз</label>
        </p>
        <hr />
        <p>Зайнятiсть </p>
        @Html.DropDownList("EmploymentId", Model.Employments)

        <hr />
        <p>Посада </p>
        <input type="text" name="Position" placeholder="Посада" value="" />

        <p>Завдання </p>
        <input type="text" name="Task" placeholder="Завдання" value="" />

        <p>Досягнення </p>
        <input type="text" name="Progres" placeholder="Досягнення" value="" />
        <hr />
        <button type="submit">Зберегти</button>
    </form>
</div>


