@model Search_Work.Arrea.Candidate.Models.Resume.EditExperiencesOfWorkViewModel

@{

    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row" id="container">

    <div style="float: left; width: 49%">
        <h3><b>Pезюме - @Model.ResumeName</b></h3>

    </div>
    <div style="float: left; width: 49%">
        <h3><b>Редагувати досвід роботи</b></h3>

    </div>

</div>

<hr />
<div id="container">
    <form method="post" asp-action="EditExpiriance" asp-controller="EditResume" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" name="ResumeId" value="@Model.Resume.Id" />
        <input type="hidden" name="Id" value="@Model.Id" />
        <hr />

        <h4>Организація </h4>
        <input type="text" name="NameOrganization" value="@Model.NameOrganization" />
        @*<input type="hidden" name="Experiences[0].Id" value="" />*@
        <hr />
        <h4>Період з: @Model.DateWorkFrom.ToString("dd/MM/yyyy")</h4>

        <p>
            <input type="date" name="DateWorkFrom" value="@Model.DateWorkFrom" />
        <p>
            <h4>по : @Model.DateWorkTo.ToString("dd/MM/yyyy")</h4>
        <p>
            <input type="date" name="DateWorkTo" value="" />
        </p>
        <p>
            @{
                var chechedIsWorkingNow = "";

                if (Model.IsWorkingNow == true)
                {
                    chechedIsWorkingNow = "checked";
                }

            }
            <input type="checkbox" name="IsWorkingNow" value="true" @chechedIsWorkingNow>
            <label for="checkbox_id"> Працюю зараз</label>
        </p>
        <hr />
        <p>Зайнятiсть  - @Model.EmploymentName</p>
        @Html.DropDownList("EmploymentId", Model.Employments)

        <hr />
        <p>Посада </p>
        <input type="text" name="Position" placeholder="Посада" value="@Model.Position" />

        <p>Завдання </p>
        <input type="text" name="Task" placeholder="Завдання" value="@Model.Task" />

        <p>Досягнення </p>
        <input type="text" name="Progres" placeholder="Досягнення" value="@Model.Progres" />
        <hr />
        <button type="submit">Зберегти</button>
        <a href="@Url.Action( @*"EditResume"*@ "Edit", "Resume", new { resumeId = Model.Id })">
            <b>Закрити</b>
        </a>
    </form>
</div>



