        @*<a id="zcilkaTopMenuNavigation" href="@Url.Action( "SavedResume", "Company", new{   })">Збережені резюме</a>*@


    </div>
</div>

<hr id="lineMenu" />

<div class="row" id="container">
    <h3><b>Збережені резюме</b></h3>
</div>

<hr />
<div class="row" id="container">


    @foreach (var resume in Model.Resumes)
    {

    <span style="float: left; width: 49%">
        <a href="@Url.Action("AboutResume", "ResumeHome", new { resumeId = resume.Id })">
            <span>@resume.NameResume - </span>
        </a>
        <span> @resume.Salary  грн/міс</span>

        @foreach (var city in resume.Cities)
        {
        <span>@city.CityName, </span>
        }

    </span>
    <div style="float: left; width: 49%">
        <div>
            (@resume.Date.ToString("dd/MM/yyyy"))
            <hr />
        </div>

        @if (resume.FotoUrl == null)
        {
        <img id="logo" src="~/images/person.png" title="@resume.NameResume" />
        }
        else
        {
        <img id="logo" src="@resume.FotoUrl" title="@resume.NameResume" />

        }

    </div>



        <div>

        </div>

        <h5><a href="@Url.Action("DeleteSaveResume","Company", new { saveResumeId = resume.SavedResumeId })"><b> Удалить </b></a></h5>

        <hr />
        <br>

    }



</div>
<hr />
<div id="container">
    @Html.Partial("~/Views/Shared/Elements/CataloguePagination/_cataloguePagination.cshtml", Model.Pagination)
</div>

