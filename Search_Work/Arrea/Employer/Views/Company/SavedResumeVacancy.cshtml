      Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="topMenuNavigation">
    <div class="cont">
        <a id="zcilkaTopMenuNavigation" href="@Url.Action("SavedResume", "Company")"><b> Збережені резюме</b></a>
