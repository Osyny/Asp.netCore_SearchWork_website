    }

    #zcilkaTopMenuNavigation {
        padding-top: 10px;
        padding-bottom: 10px;
        display: block;
        color: darkblue;
        padding-left: 100px;
        font-size: 20px;
    }



    img {
        width: 15%;
    }

    &:hover {
        background-color: rgba(115,220, 224, 1);
    }
</style>
